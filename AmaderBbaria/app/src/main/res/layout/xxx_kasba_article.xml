<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#154360"
    tools:context="com.techsajib.amaderbbaria.HomeProfile.TouristPlace.Article.KasbaArticle">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/firstSarail"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#00BBF0"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:padding="12dp"
                android:text="@string/kasbaName"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:textColor="#F6490D"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="12dp"
                android:textAlignment="center"
                android:text="@string/kasbaKollaName"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:padding="12dp"
                android:textColor="#f6f7f8"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/kasbaKollaDetails"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.5"
                android:padding="12dp"
                android:text="@string/kasbaKollaContact"
                android:textColor="#f6f7f8"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:textColor="#F6490D"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="12dp"
                android:textAlignment="center"
                android:text="@string/kasbaLokkiName"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:padding="12dp"
                android:textColor="#f6f7f8"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/kasbaLokkiDetails"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.5"
                android:padding="12dp"
                android:text="@string/kasbaLokkiContact"
                android:textColor="#f6f7f8"
                android:textSize="14sp"
                android:textStyle="bold" />



            <TextView
                android:layout_width="match_parent"
                android:textColor="#F6490D"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="12dp"
                android:textAlignment="center"
                android:text="@string/kasbaShimanto"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:padding="12dp"
                android:textColor="#f6f7f8"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/kasbaShimantoDetails"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.5"
                android:padding="12dp"
                android:text="@string/kasbaShimantoContact"
                android:textColor="#f6f7f8"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:textColor="#F6490D"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="12dp"
                android:textAlignment="center"
                android:text="@string/kasbaDighi"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:padding="12dp"
                android:textColor="#f6f7f8"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/kasbaDighiDetails"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.5"
                android:padding="12dp"
                android:text="@string/kasbaDighiContact"
                android:textColor="#f6f7f8"
                android:textSize="14sp"
                android:textStyle="bold" />



        </LinearLayout>



    </LinearLayout>



</ScrollView>
