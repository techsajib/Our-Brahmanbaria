<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="center"
        android:background="#0b7aa3"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="1dp"
                android:layout_height="145dp">

                <TextView
                    android:id="@+id/upozilaNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="  উপজেলা: "
                    android:layout_marginTop="3dp"
                    android:textColor="#f6f7f8"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/chairmainNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  চেয়ারম্যান: "
                    android:textColor="#f6f7f8"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/viceChairmainNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  ভাইস চেয়ারম্যান: "
                    android:textColor="#f6f7f8"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/womanViceChairmainNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  মহিলা ভাইস চেয়ারম্যান: "
                    android:textColor="#f6f7f8"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/mayorNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  পৌরসভা মেয়র: "
                    android:textColor="#f6f7f8"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>