<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:gravity="center"
        android:background="#154360"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kasbaunionOfficeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="  TextView"
            android:layout_marginTop="3dp"
            android:textColor="#f6f7f8"
            android:textSize="15sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/home"
            android:drawableLeft="@drawable/home"/>

        <TextView
            android:id="@+id/kasbachairmanNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Zela Parishad, brahmanbaria"
            android:textColor="#f6f7f8"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/chairman"
            android:drawableLeft="@drawable/chairman"/>

        <TextView
            android:id="@+id/kasbachairmanAddressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Uttara, Dhaka, Bangladesh"
            android:textColor="#f6f7f8"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/location"
            android:drawableLeft="@drawable/location"/>


    </LinearLayout>

</ScrollView>