<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.techsajib.amaderbbaria.SocialOrganization.Organization.BloodForBrahmanbaria">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:gravity="center"
        android:background="#0b7aa3"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/govthotelImage"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/bloodforbrahmanbaria" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="  সংগঠনের নাম: ব্লাড ফর ব্রাহ্মণবাড়িয়া"
                    android:layout_marginTop="3dp"
                    android:textColor="#ecebeb"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  প্রতিষ্ঠাকাল: ২০১৫ সাল"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textStyle="normal"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  কাজের ধরন: স্বেচ্ছায় রক্ত দান"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textStyle="normal"
                    android:layout_marginTop="10dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  কাজের এলাকা: ব্রাহ্মণবাড়িয়া"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textStyle="normal"
                    android:layout_marginTop="10dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  ভলেন্টিয়ার সংখ্যা: ৪০ জন"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textStyle="normal"
                    android:layout_marginTop="10dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="  যোগাযোগ: 01911858985"
                    android:layout_marginTop="10dp"
                    android:textColor="#ecebeb"
                    android:textSize="15sp"
                    android:textStyle="bold"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="  ইমেইল: b4b858985@gmail.com"
                    android:layout_marginTop="10dp"
                    android:textColor="#ecebeb"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/brahmanbariatitle"
                android:layout_width="match_parent"
                android:textColor="#f4f6f7"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="12dp"
                android:textAlignment="center"
                android:text="ব্লাড ফর ব্রাহ্মণবাড়িয়া"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/brahmanbariaDetails1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.5"
                android:padding="12dp"
                android:text="@string/bloodforbb1"
                android:textColor="#f6f7f8"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/brahmanbariaDetails2"
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:padding="12dp"
                android:textColor="#f6f7f8"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/bloodforbb2"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/brahmanbariaDetails3"
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:padding="12dp"
                android:textColor="#f6f7f8"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/bloodforbb3"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:padding="12dp"
                android:textColor="#f6f7f8"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/bloodforbb4"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:padding="12dp"
                android:textColor="#f6f7f8"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/qawmibloodbank7"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:padding="12dp"
                android:textColor="#f6f7f8"
                android:lineSpacingMultiplier="1.5"
                android:text="যোগাযোগ: 01911858985"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:padding="12dp"
                android:textColor="#f6f7f8"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/qawmibloodbank8"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="15dp"
            android:layout_height="100dp">

            <ImageButton
                android:id="@+id/bloodforbbemail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0b7aa3"
                android:src="@drawable/gmailmain" />

            <ImageButton
                android:id="@+id/bloodforbbfacebookGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0b7aa3"
                android:src="@drawable/facebook" />

            <ImageButton
                android:id="@+id/bloodforbbfacebookPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0b7aa3"
                android:src="@drawable/facebookpage" />


        </LinearLayout>

    </LinearLayout>


</ScrollView>
