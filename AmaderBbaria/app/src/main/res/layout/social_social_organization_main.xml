<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.techsajib.amaderbbaria.SocialOrganization.SocialOrganizationMain">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/firstSocial"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/khataKolomCardView"
                android:layout_width="150dp"
                android:layout_height="140dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="#ffffff"
                        android:src="@drawable/projectkhatakolom" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="খাতা-কলম ফাউন্ডেশন"
                        android:textColor="#000"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/obiramFoundationCardView"
                android:layout_width="150dp"
                android:layout_height="140dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/locationmain"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="#ffffff"
                        android:src="@drawable/obiramfoundatio" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="অবিরাম ফাউন্ডেশন"
                        android:textColor="#000"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondSocial"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/QawmiBloodBankCardView"
                android:layout_width="150dp"
                android:layout_height="140dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/districtLogo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="#ffffff"
                        android:src="@drawable/qawmibloodbank" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="কওমী ব্লাড ব্যাংক"
                        android:textColor="#000"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/bloodForBrahmanbariaCardView"
                android:layout_width="150dp"
                android:layout_height="140dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/fffacebook"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="#ffffff"
                        android:src="@drawable/bloodforbrahmanbaria" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="ব্লাড ফর ব্রাহ্মণবাড়িয়া"
                        android:textColor="#000"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdSocial"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/cleanBrahmanbariaCardView"
                android:layout_width="150dp"
                android:layout_height="140dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="#ffffff"
                        android:src="@drawable/cleanbrahmanbaria" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="ক্লিন ব্রাহ্মণবাড়িয়া"
                        android:textColor="#000"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/shotoKuriFoundation"
                android:layout_width="150dp"
                android:layout_height="140dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="#ffffff"
                        android:src="@drawable/shotokurifoundation" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:text="শতকুঁড়ি ফাউন্ডেশন"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/forthSocial"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/nctfBrahmanbariaCardView"
                android:layout_width="150dp"
                android:layout_height="140dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="#ffffff"
                        android:src="@drawable/nctfbrahmanbaria" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="NCTF ব্রাহ্মণবাড়িয়া"
                        android:textColor="#000"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/kisorBondoFoundationCardView"
                android:layout_width="150dp"
                android:layout_height="140dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="#ffffff"
                        android:src="@drawable/kisorbondofoundation" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="কিশোরবন্ধু ফাউন্ডেশন"
                        android:textColor="#000"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>


</ScrollView>
