<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:gravity="center"
        android:background="#0b7aa3"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/sangshadImage"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher_round" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="1dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sangshadparliamentMemberNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="  নাম: "
                    android:layout_marginTop="3dp"
                    android:textColor="#f6f7f8"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sangshadDesignationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  পদবী: "
                    android:textColor="#f6f7f8"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/sangshadSeatNumberText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  আসন নাম্বার: "
                    android:textColor="#f6f7f8"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/sangshadElectionPlacedText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  নির্বাচনী এলাকা: "
                    android:textColor="#f6f7f8"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/sangshadElectionPartyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  রাজনৈতিক দল: "
                    android:textColor="#f6f7f8"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>