<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#154360"
    tools:context="com.techsajib.amaderbbaria.FamousPeople.Nabinagar.GuljarUddinAhmed">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/second"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:textColor="#00BBF0"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="12dp"
                android:text="কর্নেল গুলজার উদ্দিন আহমেদ"
                android:textAlignment="center"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.5"
                    android:padding="12dp"
                    android:text="@string/guljar1"
                    android:textColor="#f6f7f8"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:textColor="#f6f7f8"
                    android:lineSpacingMultiplier="1.5"
                    android:text="@string/guljar2"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:textColor="#f6f7f8"
                    android:lineSpacingMultiplier="1.5"
                    android:text="@string/guljar3"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:textColor="#f6f7f8"
                    android:lineSpacingMultiplier="1.5"
                    android:text="@string/guljar4"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:textColor="#f6f7f8"
                    android:lineSpacingMultiplier="1.5"
                    android:text="@string/guljar5"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</ScrollView>
