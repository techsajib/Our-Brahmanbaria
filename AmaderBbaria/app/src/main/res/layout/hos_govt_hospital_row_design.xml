<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:background="#0b7aa3"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/hospitalImage"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher_round" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/hospitalNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="  Hospital Name"
                    android:textColor="#ecebeb"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/hospital"
                    android:drawableLeft="@drawable/hospital"/>

                <TextView
                    android:id="@+id/hospitalSeatText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/hospitalbed"
                    android:drawableStart="@drawable/hospitalbed"
                    android:text="  Hospital Seat"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/doctorCountText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/doctor"
                    android:drawableStart="@drawable/doctor"
                    android:text="  Doctor list"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/hospitallocationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  Uttara, Dhaka, Bangladesh"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textStyle="normal"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/location"
                    android:drawableLeft="@drawable/location"/>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</LinearLayout>