<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#154360"
    tools:context="com.techsajib.amaderbbaria.HomeProfile.ReligiousPlace.Temple.TempleMain">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:id="@+id/second"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/brahmanbariatitle"
               android:layout_width="match_parent"
               android:textColor="#00BBF0"
               android:textStyle="bold"
               android:layout_marginTop="12dp"
               android:textSize="20sp"
               android:padding="12dp"
               android:textAlignment="center"
               android:text="ব্রাহ্মণবাড়িয়ার জেলার মন্দিরসমূহঃ"
               android:layout_height="wrap_content" />

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="wrap_content">

               <TextView
                   android:id="@+id/brahmanbariaDetails1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="12dp"
                   android:lineSpacingMultiplier="1.5"
                   android:padding="12dp"
                   android:text="@string/brahmanbaria_mondir"
                   android:textColor="#f6f7f8"
                   android:textSize="16sp" />

           </LinearLayout>


       </LinearLayout>

   </LinearLayout>




</ScrollView>
