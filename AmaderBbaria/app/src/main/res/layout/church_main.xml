<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#154360"
    tools:context="com.techsajib.amaderbbaria.HomeProfile.ReligiousPlace.Church.ChurchMain">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/brahmanbariatitle"
            android:layout_width="match_parent"
            android:textColor="#00BBF0"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:padding="12dp"
            android:text="@string/churchName"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/brahmanbariaDetails1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:lineSpacingMultiplier="1.5"
            android:padding="12dp"
            android:text="@string/churchDetails1"
            android:textColor="#f6f7f8"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/brahmanbariaDetails2"
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:padding="12dp"
            android:textColor="#f6f7f8"
            android:lineSpacingMultiplier="1.5"
            android:text="@string/churchDetails2"
            android:layout_height="wrap_content" />

    </LinearLayout>



</ScrollView>
