                android:lineSpacingMultiplier="1.5"
                android:text="@string/projectKhataKolom8"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="4"
            android:padding="15dp"
            android:layout_height="100dp">

            <ImageButton
                android:id="@+id/cleanbrahmanbariaemail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0b7aa3"
                android:src="@drawable/gmailmain" />

            <ImageButton
                android:id="@+id/cleanbeAMember"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0b7aa3"
                android:src="@drawable/beamember" />

            <ImageButton
                android:id="@+id/cleanfacebookGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0b7aa3"
                android:src="@drawable/facebook" />

            <ImageButton
                android:id="@+id/cleanfacebookPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0b7aa3"
