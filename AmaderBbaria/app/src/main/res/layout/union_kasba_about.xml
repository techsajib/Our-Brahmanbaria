<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#154360"
    tools:context="com.techsajib.amaderbbaria.UpozilaUnion.KasbaUpozila.KasbaAbout">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/second"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:textColor="#00BBF0"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="12dp"
                android:text="কসবা উপজেলা"
                android:textAlignment="center"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="#00BBF0"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:text="অবস্থান ও আয়তন"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/brahmanbariaDetails1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.5"
                    android:padding="12dp"
                    android:text="@string/kasbaLocationDetails"
                    android:textColor="#f6f7f8"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="#00BBF0"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:text="নামকরণ ও ইতিহাস"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/brahmanbariaDetails2"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:textColor="#f6f7f8"
                    android:lineSpacingMultiplier="1.5"
                    android:text="@string/kasbaHistoryDetails1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/brahmanbariaDetails3"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:textColor="#f6f7f8"
                    android:lineSpacingMultiplier="1.5"
                    android:text="@string/kasbaHistoryDetails2"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:textColor="#f6f7f8"
                    android:lineSpacingMultiplier="1.5"
                    android:text="@string/kasbaHistoryDetails3"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:textColor="#f6f7f8"
                    android:lineSpacingMultiplier="1.5"
                    android:text="@string/kasbaHistoryDetails4"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="match_parent"
                    android:textColor="#00BBF0"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:text="মুক্তিযুদ্ধে কসবা"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:textColor="#f6f7f8"
                    android:lineSpacingMultiplier="1.5"
                    android:text="@string/kasbaWarDetails"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</ScrollView>
